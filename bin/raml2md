#!/usr/bin/env node

'use strict';

var program = require('commander');
var fs = require('fs');
var raml2md = require('..');
var pjson = require('../package.json');

program
  .usage('[options] [RAML input file]')
  .version(pjson.version)
  .option('-i, --input [input]', 'RAML input file')
  .option('-t, --template [template]', 'Path to custom Nunjucks template')
  .option('-p, --templatesPath [templatesPath]', 'Path of custom template(s)')
  .option('-o, --output [output]', 'Markdown output file')
  .parse(process.argv);

var input = program.input;

if (!input) {
  if (program.args.length !== 1) {
    console.error('Error: You need to specify the RAML input file');
    program.help();
    process.exit(1);
  }

  input = program.args[0];
}

// Start the rendering process
raml2md.render(input, raml2md.getDefaultConfig(program.template, program.templatesPath)).then(function(result) {
  if (program.output) {
    fs.writeFileSync(program.output, result);
  } else {
    // Simply output to console
    process.stdout.write(result);
    process.exit(0);
  }
}, function(error) {
  console.log('Error parsing: ' + error);
  process.exit(1);
});
